{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
  },
  "include": [
    "./src/**/*"
  ],
  "compileOnSave": false
}
